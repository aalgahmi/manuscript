<% if target == 'html' %>
<%= include_style("normalize.css") %>
<%= include_style("skeleton.css") %>
body {
  font-family: Georgia, 'Open Sans', 'Nassim Arabic Regular', 'Geeza Pro';
  font-size: 18px;
}

header {
  text-align: center;
  border-bottom: 1px solid #f4f4f4;
  padding: 1em;
  margin-bottom: 1em;
}

header h1 {
  font-size: 48px;
  font-weight: bold;
}

header h3 {
  font-size: 24px;
  font-weight: normal;
}

img.responsive {
  width: 100%;
}
<% else %>
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, p, pre, code, blockquote {
	font-weight: normal;
	font-style: normal;
}
td, th {
	border-style: solid;
	border-width: 1px;
}
table {
	border-collapse: collapse;
}
nav > ol {
  list-style: none;
}

body {
	-epub-hyphens: auto;
	-webkit-hyphens: auto;
}
p {
	font-family: serif; 
	font-size: 0.888em;
	margin-bottom: 0;
	margin-left: 0;
	margin-right: 0;
	margin-top: 0;
	text-indent: 0;
}
<% end %>

<%= Rouge::Themes::Github.render(scope: '.highlighter-rouge') %>
  
h1:not([role="chapter"]) {
  font-size: 150%;
}

figure img {
	margin: .75em auto;
}

figcaption {
	clear: left;
	margin: .75em 0;
	text-align: center;
	font-style: italic;
	line-height: 1.5em;
}

.highlighter-rouge {
  direction: ltr;
  font-family: 'Courier New', Courier, monospace;
  font-size: 85%;
  background-color: #fdfdfd;
  border:1px solid #e1e8ed;
  border-radius: 0.28571429rem;
}

code.highlighter-rouge {
  padding: .1em .4em;
}

div.highlighter-rouge {
  padding: .6em;
  margin-top: .6em;
  margin-button: .6em;
  white-space: pre;
}
